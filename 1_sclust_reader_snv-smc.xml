<tool id="sclust_1" name="Sclust - 1. SNV reader" version="0.1.0">                                       
    <description> - SMC-Het</description>                                                              
    <requirements>                                                                                       
        <container type="docker">r-base</container>                                                      
    </requirements>                                                                                      
    <stdio>                                                                                              
        <exit_code range="1:"/>                                                                          
    </stdio>                                                                                             
    <command interpreter="Rscript">                                                                      
        sclust_reader_snv-smc.R ${snv_smc}                                                                      
    </command>                                                                                           
    <inputs>                                                                                             
        <param format="vcf" name="snv_smc" type="data" label="SNV (SMC-Het format)" help=""/>
    </inputs>
    <outputs>
        <data format="vcf" name="snv_sclust" label="SNV (Sclust format)" from_work_dir="sclust.vcf"/>                                  
    </outputs>                                                                                           
    <help></help>                                                                                        
</tool>