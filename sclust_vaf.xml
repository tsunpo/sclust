<tool id="sclust_3" name="Sclust - 3. VAF" version="0.1.0">                                       
    <description></description>                                                              
    <requirements>                                                                                       
        <container type="docker">r-base</container>                                                      
    </requirements>                                                                                      
    <stdio>                                                                                              
        <exit_code range="3:"/>                                                                          
    </stdio>                                                                                             
    <command interpreter="Rscript">                                                                      
        sclust_vaf.R ${snv_sclust} ${cna_sclust} ${purity_smc}                                                                     
    </command>                                                                                           
    <inputs> 
        <param format="vcf" name="snv_sclust" type="data" label="SNV (Sclust format)" help=""/>                                                                                            
        <param format="txt" name="cna_sclust" type="data" label="CNA (Sclust format)" help=""/>
        <param format="txt" name="purity_smc" type="data" label="Purity (SMC-Het format)" help=""/>
    </inputs>                                                                                            
    <outputs>                                                                                                                            
        <data format="txt" name="sclust_expAF" label="Sclust VAF (TXT)" from_work_dir="sclust_muts_expAF.txt"/>
    </outputs>                                                                                           
    <help></help>                                                                                        
</tool>