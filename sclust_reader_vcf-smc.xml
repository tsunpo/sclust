<tool id="sclust_1" name="Sclust 1 - VCF reader" version="0.1.0">                                       
    <description>(SMC-Het)</description>                                                              
    <requirements>                                                                                       
        <container type="docker">r-base</container>                                                      
    </requirements>                                                                                      
    <stdio>                                                                                              
        <exit_code range="1:"/>                                                                          
    </stdio>                                                                                             
    <command interpreter="Rscript">                                                                      
        sclust_reader_vcf-smc.R ${vcf_smc}                                                                      
    </command>                                                                                           
    <inputs>                                                                                             
        <param format="vcf" name="vcf_smc" type="data" label="VCF (SMC-Het format)" help=""/>
    </inputs>
    <outputs>
        <data format="vcf" name="vcf_sclust" label="VCF (Sclust format)" from_work_dir="sclust.vcf"/>                                  
    </outputs>                                                                                           
    <help></help>                                                                                        
</tool>